{
  "name": "portal/mongo-phinx",
  "description": "MongoDB Phinx Adapter",
  "keywords": [
    "MongoDB, phinx"
  ],
  "license": "proprietary",
  "authors": [
    {
      "name": "Garipov Azamat",
      "email": "a.garipov@info74.ru"
    }
  ],
  "support": {
    "email": "a.garipov@info74.ru"
  },
  "autoload": {
    "psr-4": {
      "MongoPhinx\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MongoPhinx\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://composer.package.portal/repo/private/"
    },
    {
      "type": "composer",
      "url": "http://composer.package.portal/repo/packagist/"
    },
    {
      "packagist": false
    }
  ],
  "archive": {
    "exclude": [
      ".gitignore",
      "/tests"
    ]
  },
  "config": {
    "secure-http": false,
    "platform": {
      "php": "7.1.1"
    }
  },
  "require": {
    "php": ">=7.1.0",
    "mongodb/mongodb": "^1.4",
    "robmorgan/phinx": "^0.10.6",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2"
  },
  "bin": ["bin/phinx-mongo"]
}
